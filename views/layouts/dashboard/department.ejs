  <!-- Scripts -->
  <%- include("./sections/scripts.ejs") %>   
  <!-- Scripts -->
  <% const deptId = dept.id %>
  <script>
    function convertFD2JSON(formData) {
            let obj = {};
            formData.forEach(function(value, key) {
                obj[key] = value;
            })
            return obj;
        }
        document.querySelector("form").addEventListener("submit", handleForm);
        function handleForm(ev) {
            ev.preventDefault();
            let myForm = ev.target;
            const data = convertFD2JSON(new FormData(myForm));
            const newFormData = {
              recruiting: data.recruiting === "on" ? false : true,
              pic: data.pic,
              name: data.name,
              tagline: data.tagline,
              description: data.description,
            }
            console.log(newFormData);
            // after banckend chnage update this
            fetch("/dashboard/department/<%= deptId %>/edit", {
              body: JSON.stringify(newFormData),
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              }
            })
            .then((some) => { return some.json() })
            .then(async (res) => {
              document.querySelector('form').reset();
              // console.log(res)
              // instanciate new modal
              var modal = new tingle.modal({
                footer: true,
                stickyFooter: false,
                closeMethods: ['button', 'escape', 'overlay'],
                closeLabel: "Close",
                cssClass: ['custom-class-1', 'custom-class-2'],
              });

              // set content
              modal.setContent( `<h1> ${res.message} </h1>` );

              // add button
              modal.addFooterBtn('close', 'tingle-btn tingle-btn--primary tingle-btn--pull-right', function() {
                // here goes some logic
                modal.close();
                location.reload();
              });
              modal.open()
            })
            .catch((err) => {
                // instanciate new modal
                var modal = new tingle.modal({
                      footer: true,
                      stickyFooter: false,
                      closeMethods: ['button', 'escape'],
                      closeLabel: "Close",
                      cssClass: ['custom-class-1', 'custom-class-2'],
                  });
  
                  // set content
                  modal.setContent( `<h1> ${res.message} </h1>` );
      
  
                  // add button
                  modal.addFooterBtn('close', 'tingle-btn tingle-btn--danger tingle-btn--pull-right', function() {
                      // here goes some logic
                      modal.close();
                  });

                  modal.open()
            })
        }
        
  </script>

</body>

</html>