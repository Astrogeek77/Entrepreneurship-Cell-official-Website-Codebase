                                <div class="ml-4 text-md tracking-wide font-semibold w-40">
                                    konarklohat123456@gmail.com
                                </div>
                            </div>
                        </div>

                        <form data-aos="fade-down" data-aos-once="true" action="/" method="POST" class="p-6 flex flex-col justify-center">
                            <div class="flex flex-col">
                                <label for="name" class="hidden">Full Name</label>
                                <input type="name" required name="contact[name]" id="name" placeholder="Full Name"
                                    class="w-100 mt-2 py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 dark:text-white focus:border-indigo-500 focus:outline-none">
                            </div>

                            <div class="flex flex-col mt-2">
                                <label for="email" class="hidden">Email</label>
                                <input type="email" required name="contact[email]" id="email" placeholder="Email"
                                    class="w-100 mt-2 py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 dark:text-white focus:border-indigo-500 focus:outline-none">
                            </div>

                            <div class="flex flex-col mt-2">
                                <label for="message" class="hidden">Message</label>
                                <textarea
                                    class="w-100 h-20 mt-2 py-3 px-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-400 dark:border-gray-700 text-gray-800 dark:text-white focus:border-indigo-500 focus:outline-none"
                                    name="contact[message]" required id="message" placeholder="Message"></textarea>
                            </div>
                            <div class="mt-3">
                                <button id="contact-form-button" type="submit"
                                    class="w-full focus:outline-none text-white font-semibold  text-sm py-2.5 px-5 rounded-md bg-indigo-600 hover:bg-gray-900 dark:hover:bg-indigo-900 dark:hover:text-white duration-200">Submit</button>
